{
    "name": "Python-NodeJS",
    "build": {
        "dockerfile": "Dockerfile",
        "context": ".."
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "GitHub.copilot",
                "GitHub.copilot-chat",
                "ckolkman.vscode-postgres"
            ],
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash",
                "extensions.verifySignatures": false
            }
        }
    },
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {}
    }
}